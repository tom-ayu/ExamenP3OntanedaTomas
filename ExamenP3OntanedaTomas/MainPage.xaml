<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenP3OntanedaTomas.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Editor x:Name="TO_prompt"
                    Placeholder="Ingrese el Pais"
                    AutoSize="TextChanges" 
                    HeightRequest="30" />
            
            <Button
                x:Name="TOBuscarAPI"
                Text="Buscar" 
                Clicked="BuscarAPIClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="TOBorrarCampo"
                Text="Limpiar campo de texto" 
                Clicked="BorrarCampoClicked"
                HorizontalOptions="Fill" />

            <ListView x:Name="TOPais" ItemsSource="{Binding pais}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding NombreOficial}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
                

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
